    "md": "mos"
  },
  "files": [
    "index.d.ts",
    "index.d.ts.map",
    "index.js",
    "index.js.map"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/pnpm/cmd-shim.git"
  },
  "license": "BSD-2-Clause",
  "dependencies": {
    "is-windows": "^1.0.0",
    "make-dir": "^3.0.0"
  },
  "devDependencies": {
    "@types/is-windows": "^0.2.0",
    "@types/node": "^12.7.2",
    "lodash": "^4.17.15",
    "memory-fs": "^0.4.1",
    "mock-fs": "^4.10.1",
    "mos": "^1.3.1",
    "mos-plugin-readme": "^1.0.4",
    "rimraf": "^2.6.2",
    "standard": "^11.0.1",
    "tape": "^4.6.2",
    "tape-promise": "^2.0.1",
    "typescript": "^3.5.3"
  },
  "engines": {
    "node": ">=8.15"
  },
  "mos": {
    "plugins": [
      "readme"
    ]
  }
